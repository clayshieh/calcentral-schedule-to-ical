{
  "name": "CalCentral Schedule to ical",
  "version": "0.0.2",
  "manifest_version": 2,
  "description": "Easily download a calendar file from your calcentral schedule",
  "icons": {
    "16": "icons/cal16.png",
    "48": "icons/cal48.png",
    "128": "icons/cal128.png"
  },
  "background": {
    "scripts": [
      "js/ical.min.js", 
      "js/background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_icon": "icons/cal19.png",
    "default_title": "calcentral schedule to ical"
  },
  "permissions": [
    "tabs",
    "downloads",
    "declarativeContent",
    "https://berkeley.collegescheduler.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://berkeley.collegescheduler.com/*"],
      "js": ["js/content.js"]
    }
  ],
  "web_accessible_resources": [
    "toastr/toastr.min.js",
    "toastr/toastr.min.css"
  ]
}